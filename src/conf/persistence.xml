      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/sereba_accounting?zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="john"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
